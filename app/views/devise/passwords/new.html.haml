%h2 
  = t(:forgot_password)
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p= f.submit t(:forgot_password_button)
= render :partial => "devise/shared/links"
